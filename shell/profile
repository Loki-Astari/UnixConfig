# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# if running bash

# set PATH so it includes user's private bin if it exists
export PATH="/usr/local/bin:${PATH}"
if [ -d "$HOME/bin" ] ; then
    PATH="$HOME/bin:$PATH"
fi

alias vi=vim
alias gd="git difftool --no-prompt --tool=vimdiff"
alias sync="sudo ntpdate pool.ntp.org"
alias netsync="sudo /etc/init.d/networking restart"
alias version="lsb_release -a"
alias sync='sudo date +%Y-%m-%dT%H:%M:%S%Z --set=`curl http://www.timeapi.org/pdt/now`'
#alias ctags="ctags --langmap=ObjectiveC:.mm.h"
alias hd="od -t x1 -t c"
alias atool='autoreconf --install'

export LD_LIBRARY_PATH=~/Clean/Cloud/build/lib:/mnt/cluster/bh/Cloud/build/lib
export PATH="${PATH}:/mnt/cluster/bh/Cloud/build/bin"

export PATH=${PATH}:${EC2_HOME}/bin
if [[ "`uname -s`" == "Darwin" ]]; then
    export JAVA_HOME='/Applications/Xcode.app/Contents/Applications/Application Loader.app/Contents/MacOS/itms/java'
else
    export JAVA_HOME=/usr
fi

export EC2_HOME=~/.ec2
export PATH=${PATH}:${EC2_HOME}/bin

export MOZSCAPE_KEY="$EC2_HOME/credentials/bigdata-keys/bigdata-20130729.pem"
export EC2_CERT="$EC2_HOME/credentials/bigdata-keys/cert-QY5WIK5STPMZEJV4AMJI6UBMLKEYDICE.pem"
export EC2_PRIVATE_KEY="$EC2_HOME/credentials/bigdata-keys/pk-QY5WIK5STPMZEJV4AMJI6UBMLKEYDICE.pem"
if [[ -e ~/.s3exec_cfg ]]; then
    export AMAZON_ACCESS_KEY_ID=`head -1 ~/.s3exec_cfg`
    export AMAZON_SECRET_ACCESS_KEY=`tail -1 ~/.s3exec_cfg`
fi

cd ~/.config
git pull
cd ${HOME}

if [[ -e .mozkey ]]; then
    export access_id=`head -1 .mozKey`
    export secret_key=`tail -1 .mozKey`
fi
if [[ -e .lsapi ]]; then
    AUTHDB_USER=`head -1 .lsapi`
    AUTHDB_PW=`tail -1 .lsapi`
fi

